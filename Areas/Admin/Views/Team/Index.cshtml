@using Lumia.Models;
@model List<Team>
@{
    int count = 0;
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Basic Table</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <a href="https://wrappixel.com/templates/ampleadmin/" target="_blank" class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">
                    Upgrade to Pro

                </a>
                <ol class="breadcrumb">
                    <li><a href="#">Dashboard</a></li>
                    <li class="active">Basic Table</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <h3 class="box-title">Basic Table</h3>
                    <p class="text-muted">Add class <code>.table</code></p>
                    <a asp-action="Create"><button class="btn btn-success">Create</button> </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th> Name</th>
                                    <th>Surname</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(Team item in Model){
                                <tr>
                                    <td>@(count++)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>
                                        <img style="width:100px" src="~/assets/img/testimonials/@item.ImageName">
                                        </td>
                                    <td>@item.Description</td>
                                        <td>
                                           <button class="btn btn-info" asp-action="Details" asp-controller="Team">Details</button>
                                           <a class="btn btn-primary" asp-action="Edit" asp-controller="Team" asp-route-id="@item.Id" method="post">Edit</a>
                                           <form asp-action="Delete" asp-controller="Team" asp-rout-id="@item.Id" method="post">
                                             <button class="btn btn-danger">Delete</button>
                                           </form>
                                        </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    <footer class="footer text-center"> 2017 &copy; Ample Admin brought to you by wrappixel.com</footer>
</div>